{
  "appId": "com.streamhaven.app",
  "productName": "StreamHaven",
  "directories": {
    "output": "dist"
  },
  "files": [
    "dist/**/*",
    "electron-main.js",
    "electron-preload.js",
    "package.json",
    "node_modules/**/*"
  ],
  "win": {
    "target": "nsis",
    "icon": "public/favicon.ico"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "runAfterFinish": true,
    "installerHeaderIcon": "public/favicon.ico"
  },
  "extraResources": [
    {
      "from": "src/utils",
      "to": "utils"
    }
  ]
}